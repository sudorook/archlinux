[Trigger]
Type = Package
Operation = Remove
Target = linux

[Action]
Description = Removing Linux from EFI system path
When = PostTransaction
Exec = /bin/sh -c '/usr/bin/bootctl is-installed >/dev/null 2>&1 && EFI=$(/usr/bin/bootctl -p) && /usr/bin/rm -f $EFI/initramfs-linux{-fallback,}.img $EFI/vmlinuz-linux $EFI/loader/entries/linux{-fallback,}.conf'
