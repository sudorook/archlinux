[Trigger]
Type = Package
Operation = Install
Target = linux-zen

[Action]
Description = Installing Linux Zen to EFI system path
When = PostTransaction
Exec = /bin/sh -c '/usr/bin/bootctl is-installed >/dev/null 2>&1 && EFI=$(/usr/bin/bootctl -p) && /usr/bin/cp -af /boot/vmlinuz-linux-zen /boot/initramfs-linux-zen{-fallback,}.img -t $EFI && [ -f /usr/local/sbin/sdboot-mkconfig ] && /usr/local/sbin/sdboot-mkconfig linux-zen'
