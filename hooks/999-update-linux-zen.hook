[Trigger]
Type = Package
Operation = Upgrade
Target = linux-zen

[Trigger]
Type = Path
Operation = Install
Operation = Upgrade
Target = usr/lib/modules/*zen*/vmlinuz
Target = usr/lib/initcpio/*

[Action]
Description = Updating Linux Zen on EFI system path
When = PostTransaction
Exec = /bin/sh -c '( pacman -Qi linux-zen && /usr/bin/bootctl is-installed && EFI=$(/usr/bin/bootctl -p) && /usr/bin/cp -af /boot/vmlinuz-linux-zen /boot/initramfs-linux-zen{-fallback,}.img -t $EFI ) >/dev/null 2>&1'
