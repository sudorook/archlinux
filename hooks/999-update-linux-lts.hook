[Trigger]
Type = Package
Operation = Upgrade
Target = linux-lts

[Trigger]
Type = Path
Operation = Install
Operation = Upgrade
Target = usr/lib/modules/*lts*/vmlinuz
Target = usr/lib/initcpio/*

[Action]
Description = Updating Linux LTS on EFI system path
When = PostTransaction
Exec = /bin/sh -c '( pacman -Qi linux-lts && /usr/bin/bootctl is-installed && EFI=$(/usr/bin/bootctl -p) && /usr/bin/cp -af /boot/vmlinuz-linux-lts /boot/initramfs-linux-lts{-fallback,}.img -t $EFI ) >/dev/null 2>&1'
