[Trigger]
Type = Package
Operation = Remove
Target = intel-ucode

[Action]
Description = Removing Intel microcode from EFI system path
When = PostTransaction
Exec = /bin/sh -c '/usr/bin/bootctl is-installed >/dev/null 2>&1 && EFI=$(/usr/bin/bootctl -p) && /usr/bin/rm -f $EFI/intel-ucode.img && /usr/bin/sed -i "/^initrd\s\+\/intel-ucode.img/d" $EFI/loader/entries/*.conf'
