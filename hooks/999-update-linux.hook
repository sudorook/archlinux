[Trigger]
Type = Package
Operation = Upgrade
Target = linux

[Action]
Description = Updating Linux on EFI system path
When = PostTransaction
Exec = /bin/sh -c '( pacman -Qi linux && /usr/bin/bootctl is-installed && EFI=$(/usr/bin/bootctl -p) && /usr/bin/cp -af /boot/vmlinuz-linux /boot/initramfs-linux{-fallback,}.img -t $EFI ) >/dev/null 2>&1'
