[Trigger]
Type = Package
Operation = Remove
Target = linux-rt-lts

[Action]
Description = Removing Linux RT LTS from EFI system path
When = PostTransaction
Exec = /bin/sh -c '/usr/bin/bootctl is-installed >/dev/null 2>&1 && EFI=$(/usr/bin/bootctl -p) && /usr/bin/rm -f $EFI/initramfs-linux-rt-lts{-fallback,}.img $EFI/vmlinuz-linux-rt-lts $EFI/loader/entries/linux-rt-lts{-fallback,}.conf'
