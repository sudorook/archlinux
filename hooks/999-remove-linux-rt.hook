[Trigger]
Type = Package
Operation = Remove
Target = linux-rt

[Action]
Description = Removing Linux RT from EFI system path
When = PostTransaction
Exec = /bin/sh -c '/usr/bin/bootctl is-installed >/dev/null 2>&1 && EFI=$(/usr/bin/bootctl -p) && /usr/bin/rm -f $EFI/initramfs-linux-rt{-fallback,}.img $EFI/vmlinuz-linux-rt $EFI/loader/entries/linux-rt{-fallback,}.conf'
