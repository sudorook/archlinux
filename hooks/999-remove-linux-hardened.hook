[Trigger]
Type = Package
Operation = Remove
Target = linux-hardened

[Action]
Description = Removing Linux Hardened from EFI system path
When = PostTransaction
Exec = /bin/sh -c '/usr/bin/bootctl is-installed >/dev/null 2>&1 && EFI=$(/usr/bin/bootctl -p) && /usr/bin/rm -f $EFI/initramfs-linux-hardened{-fallback,}.img $EFI/vmlinuz-linux-hardened $EFI/loader/entries/linux-hardened{-fallback,}.conf'
