[Trigger]
Type = Package
Operation = Upgrade
Target = linux-rt

[Trigger]
Type = Path
Operation = Install
Operation = Upgrade
Target = usr/lib/modules/*realtime*rt/vmlinuz
Target = usr/lib/initcpio/*

[Action]
Description = Updating Linux RT on EFI system path
When = PostTransaction
Exec = /bin/sh -c '( pacman -Qi linux-rt && /usr/bin/bootctl is-installed && EFI=$(/usr/bin/bootctl -p) && /usr/bin/cp -af /boot/vmlinuz-linux-rt /boot/initramfs-linux-rt{-fallback,}.img -t $EFI ) >/dev/null 2>&1'
