[Trigger]
Type = Package
Operation = Install
Target = linux-hardened

[Action]
Description = Installing Linux Hardened to EFI system path
When = PostTransaction
Exec = /bin/sh -c '/usr/bin/bootctl is-installed >/dev/null 2>&1 && EFI=$(/usr/bin/bootctl -p) && /usr/bin/cp -af /boot/vmlinuz-linux-hardened /boot/initramfs-linux-hardened{-fallback,}.img -t $EFI && [ -f /usr/local/sbin/sdboot-mkconfig ] && /usr/local/sbin/sdboot-mkconfig linux-hardened'
